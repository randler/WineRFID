<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <!-- Link Layout -->
    <LinearLayout android:id="@+id/opt_link"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation = "vertical"
    	>
    	<ListView android:id="@+id/list_btdevice"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="12"
		/>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1">
			<Button android:id="@+id/btn_scan"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:text="Procurar Dispositivo" />
			<Button android:id="@+id/btn_disconnect"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:text="Desconectar" />
		</LinearLayout>
    </LinearLayout>
    
    <!-- Inventory Layout -->
    <LinearLayout android:id="@+id/opt_inventory"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation = "vertical" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">

            <Button android:id="@+id/btn_inventory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dip"
                android:text="Iniciar Leitura"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip" />

		</LinearLayout>


	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation = "horizontal"
		android:layout_weight="0"
		android:layout_marginTop="10dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="2"
			android:textSize="50dip"
			android:gravity="right"
			android:text="Total:"
			android:textColor="#146505" />
		<TextView android:id="@+id/txt_tagcountInventory"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:textSize="50dip"
			android:gravity="center"
			android:text="0"
			android:textColor="#146505" />
	</LinearLayout>

		<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation = "horizontal"
    		android:layout_weight="0">

			<ListView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:id="@+id/listViewPaleteCad"
				android:layout_margin="8dp" />
		</LinearLayout>


    </LinearLayout>
    
    <!-- Procurar Layout -->
	<LinearLayout
		android:id="@+id/opt_cadastrar"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation = "vertical"
		android:weightSum="1">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="CADASTRAR TAG"
			android:id="@+id/textViewCadTag"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="10dp" />

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginTop="20dp">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp">

				<Spinner
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/spinnerCadTag" />
			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginRight="5dp"
				android:layout_marginLeft="5dp">

				<Button
					android:layout_width="fill_parent"
					android:layout_height="match_parent"
					android:id="@+id/buttonReadCadTag"
					android:layout_weight="8"
					android:text="Ler Tag"
					android:enabled="false" />
			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<EditText
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/editTextCadTag"
					android:enabled="false"
					android:layout_marginTop="6dp"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp" />
			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="30dp">

				<Button
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Gravar"
					android:id="@+id/buttonGravarCadTag"
					android:layout_gravity="bottom|center"
					android:layout_margin="10dp"
					android:layout_weight="8"
					android:enabled="false" />
				<Button
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Gravar Outra"
					android:id="@+id/buttonGravarOutraCadTag"
					android:enabled="false"
					android:layout_gravity="bottom|center"
					android:layout_margin="10dp"
					android:layout_weight="8" />
			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Tag Gravada:"
					android:id="@+id/textView9"
					android:textColor="#0b4301"
					android:textSize="15dp" />

				<EditText
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/editTextTagGravadaFinal"
					android:textColor="#328c01"
					android:enabled="false" />
			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Total de Tag gravadas:"
					android:id="@+id/textView10"
					android:layout_weight="1"
					android:gravity="right"
					android:textColor="#000000" />

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="00"
					android:id="@+id/textView1TotalTagGravada"
					android:layout_weight="5"
					android:textSize="30dp"
					android:gravity="right"
					android:textColor="#117100" />
			</LinearLayout>

			<LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
				android:gravity="bottom">

				<Button
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Reiniciar contador"
					android:id="@+id/buttonResetContadorCadTag"
					android:enabled="false" />
			</LinearLayout>

		</LinearLayout>


	</LinearLayout>

	<LinearLayout android:id="@+id/opt_cadastrar_palete"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Cadasrar Pallet"
                    android:id="@+id/textView2"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:contextClickable="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ler Pallet"
                    android:id="@+id/buttonLerPaleteCad"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextLerPaleteCad"
                    android:layout_margin="5dp"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Adicionar Caixa"
                    android:id="@+id/buttonAdicionarCaixaPaleteCad"
                    android:textSize="20dp"
					android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="154dp"
                    android:id="@+id/listViewTagPaleteCad"
                    android:layout_margin="8dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Total de Caixas:"
                    android:id="@+id/textView8"
                    android:textColor="#020202" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="00"
                    android:id="@+id/textViewTotalPaleteCad"
                    android:textAlignment="viewEnd"
                    android:textColor="#c21818"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
				android:gravity="bottom">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Remover Ultima Caixa"
                    android:id="@+id/buttonRemoveCaixaPaleteTag"
                    android:layout_weight="8"
					android:enabled="false" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Salvar Palete"
                    android:id="@+id/buttonSalvarPaleteCad"
                    android:layout_weight="8"
					android:enabled="false" />
            </LinearLayout>
        </LinearLayout>
		</LinearLayout>

	<LinearLayout android:id="@+id/opt_procurar"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="30sp"
			android:gravity="center"
			android:id="@+id/btn_inventoryProcurar"
			android:layout_centerHorizontal="true"
			android:textColor="@android:color/holo_red_dark"
			android:text="PROCURAR"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px" >

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="PotÃªncia" />

				<TextView
					android:id="@+id/txt_potenciaProcurar"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="Max" />


			</LinearLayout>
			<SeekBar
				android:id="@+id/seek_potenciaProcurar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:layout_marginRight="10px"
				android:paddingLeft="20px"
				android:paddingRight="10px" />

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px" >

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Raio" />

				<TextView
					android:id="@+id/txt_raioProcurar"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:text="MAX" />

			</LinearLayout>

			<SeekBar
				android:id="@+id/seek_raioProcurar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:layout_marginRight="10px"
				android:paddingLeft="20px"
				android:paddingRight="10px" />
		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<EditText
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/editTextProcurar"
					android:layout_weight="8"
					android:layout_marginLeft="5dp" />

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="PROCURAR"
					android:id="@+id/btn_procurar"
					android:layout_gravity="center"
					android:layout_marginBottom="10dp"
					android:layout_marginRight="5dp" />
			</LinearLayout>

			<RadioGroup
				android:id="@+id/rgopcoes"
				android:layout_width="fill_parent"
				android:orientation="horizontal"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center_horizontal">

				<RadioButton
					android:id="@+id/rbTag"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true"
					android:text="TAG"
					android:layout_margin="5dp" />

				<RadioButton
					android:id="@+id/rbLote"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="LOTE"
					android:layout_margin="5dp" />

				<RadioButton
					android:id="@+id/rbDestino"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="DESTINO"
					android:layout_margin="5dp" />
			</RadioGroup>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/imageViewPrimeiro"
				android:background="@drawable/lamp_red"
				android:adjustViewBounds="false"
				android:baselineAlignBottom="false"
				android:scaleType="centerCrop"
				android:layout_gravity="center"
				android:layout_margin="10dp"
				android:padding="5dp" />

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/imageViewSegundo"
				android:background="@drawable/lamp_gray"
				android:layout_gravity="center"
				android:layout_margin="10dp"
				android:padding="5dp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="DESATIVADO"
				android:id="@+id/textViewImagemProcurar"
				android:layout_weight="8" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation = "horizontal"
			android:layout_weight="0">
			<ListView android:id="@+id/list_tagProcurar"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_gravity="bottom"
				android:layout_weight="12"
				android:layout_margin="5dp" />
		</LinearLayout>


	</LinearLayout>

	<!-- Config Layout -->
    <LinearLayout android:id="@+id/opt_config"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 
    	android:orientation="vertical">
    	<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content" >
    		<LinearLayout
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:orientation="vertical">
    			<CheckBox
    				android:id="@+id/chk_auto_link"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text="auto link" />
    			<CheckBox
    				android:id="@+id/chk_detect_sound"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text="detect sound" />
    			<CheckBox
    				android:id="@+id/chk_skip_same"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content" 
    				android:text="skip same"/>
    			<CheckBox
    				android:id="@+id/chk_single_tag"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content" 
    				android:text="single tag"/>
    			<CheckBox
    				android:id="@+id/chk_continuous"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content" 
    				android:enabled="false"
    				android:text="continuous"/>
    		</LinearLayout>
    		<LinearLayout
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content" 
    			android:orientation="vertical"
    			android:layout_marginLeft="10px">
    			<TextView
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text = "Query Parameter"
    				android:textColor="#ffff00" />
   				<TextView
   					android:layout_width="wrap_content"
   					android:layout_height="wrap_content"
   					android:text = "SESSION"/>
    			<LinearLayout
    				android:layout_width="fill_parent"
    				android:layout_height="wrap_content" 
    				android:gravity="center">
    				<Spinner
    					android:id="@+id/spin_query_session"
    					android:layout_width="wrap_content"
    					android:layout_height="fill_parent"
    					android:entries="@array/spin_config_query_session"
    					android:prompt="@string/prompt_config_query_session" />
    				<Spinner
    					android:id="@+id/spin_target_ab"
    					android:layout_width="fill_parent"
    					android:layout_height="fill_parent"
    					android:entries="@array/spin_config_target_ab"
    					android:prompt="@string/prompt_config_target_ab" />
    			</LinearLayout> 
    			<LinearLayout
    				android:layout_width="fill_parent"
    				android:layout_height="wrap_content"
    				android:gravity="center" >
    				<TextView
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text = "Q  "/>
    				<Spinner
    					android:id="@+id/spin_query_q"
    					android:layout_width="fill_parent"
    					android:layout_height="wrap_content"
    					android:entries="@array/spin_config_q"
    					android:prompt="@string/prompt_config_q" />
    			</LinearLayout> 
    			<LinearLayout
    				android:layout_width="fill_parent"
    				android:layout_height="wrap_content" 
    				android:gravity="center">
    				<TextView
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"
    					android:text = "Timeout(S)"/>
    				<EditText
    					android:id="@+id/edt_query_timeout"
    					android:layout_width="fill_parent"
    					android:layout_height="wrap_content"
    					android:inputType="number"
    					/>
    			</LinearLayout> 
    		</LinearLayout>
    	</LinearLayout>
    	
    	<LinearLayout
    	    android:layout_width="290dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="20px" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Tx Power" />

			<TextView
			    android:id="@+id/txt_power"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:gravity="right"
			    android:text="Max" />

		</LinearLayout>

		<SeekBar
		    android:id="@+id/seek_power"
		    android:layout_width="282dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="20px"
		    android:layout_marginRight="10px"
		    android:paddingLeft="20px"
		    android:paddingRight="10px" />
		
		<LinearLayout
    	    android:layout_width="290dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="20px" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Tx duty" />

			<TextView
			    android:id="@+id/txt_duty"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:gravity="right"
			    android:text="MAX" />

		</LinearLayout>

		<SeekBar
		    android:id="@+id/seek_duty"
		    android:layout_width="282dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="20px"
		    android:layout_marginRight="10px"
		    android:paddingLeft="20px"
		    android:paddingRight="10px" />
		
		<LinearLayout
    	    android:layout_width="290dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="10px" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Battery State" />

			<TextView
			    android:id="@+id/batt_power2"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:gravity="right"
			    android:text="Max" />

		</LinearLayout>

		<ProgressBar
		    android:id="@+id/batt_progress2"
		    style="?android:attr/progressBarStyleHorizontal"
		    android:layout_width="290dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10px"
		    android:layout_marginRight="10px"
		    android:paddingLeft="10px"
		    android:paddingRight="10px"
		    />

